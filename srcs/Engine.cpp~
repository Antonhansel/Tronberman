#include "Engine.hpp"

Engine::Engine()
{
  _camera = new Camera(HEIGHT, WIDTH);
  _menu = new Menu(_camera);
  _core = new Core(_camera);
}

Engine::~Engine()
{
  delete _camera;
  delete _menu;
  delete _core;
}

bool		Engine::start()
{
  bool		quit(false);

  if (_menu->initialize())
    {
      while (!quit)
	{
	  while (_menu->update() == true)
	    _menu->draw();
	  if (_menu->launch() == true)
	    {
	      // getter depuis le menu
	      // setter vers core
	      std::cout << "LAUNCHING THE MENU" << std::endl;
	      _menu->reset();
	        if (_core->initialize())
	    	{
	    	  while (_core->update())
	    	    _core->draw();		  
	    	}
		//	      _core->reset();
	    }
	  else
	    quit = true;
	}
    }
  return (false);
}
